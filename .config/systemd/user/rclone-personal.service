[Unit]
Description=Google Drive Personal (Rclone)
AssertPathIsDirectory=/home/tino/GoogleDrive-Personal
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/rclone mount drive-personal: /home/tino/GoogleDrive-Personal/ \
    --vfs-cache-mode full \
    --vfs-cache-max-size 10G \
    --vfs-cache-max-age 24h
ExecStop=/bin/fusermount -u /home/tino/GoogleDrive-Personal/
Restart=always
RestartSec=10

[Install]
WantedBy=default.target